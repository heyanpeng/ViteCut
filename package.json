{
  "name": "vitecut-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["ffmpeg-static"]
  },
  "scripts": {
    "dev": "pnpm --filter app dev",
    "dev:api": "pnpm --filter api dev",
    "dev:api:prod": "pnpm --filter api dev:prod",
    "typecheck": "tsc -b",
    "lint": "pnpm --recursive --filter \"*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "pnpm run typecheck && pnpm run lint",
    "build": "pnpm -r run build",
    "build:packages": "pnpm -r run build --filter '@vitecut/*'",
    "build:app": "pnpm --filter app build",
    "preview": "pnpm --filter app preview",
    "clean": "pnpm --recursive --filter \"*\" exec rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
